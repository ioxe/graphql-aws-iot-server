{
    "compileOnSave": false,
    "compilerOptions": {
      "outDir": "./dist",
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "target": "es5",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2016",
        "dom",
        "esnext.asynciterable"
      ]
    },
    "exclude": [
      "tests/**/*",
      "documentation/**/*",
      "node_modules/**/*",
      "coverage/**/*"
    ]
  }
  